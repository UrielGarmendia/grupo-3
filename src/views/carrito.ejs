<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head') %>
    <title>Carrito</title>
    <link rel="stylesheet" href="/css/carrito.css">

</head>

<body>
    <!-- H    E    A    D     E    R -->
    <%- include('./partials/header')  %> 
    <!-- M    A    I    N -->
    <main>
        <!-- RESUMEN DE COMPRA -->
        <form action="#" class="article-resumen-de-compra">
            <div class="resumen-de-compra">
                <h2>
                    RESUMEN DE COMPRA
                </h2>
                <input type="text" name="cupon" placeholder="Cupon de descuento">
                <input type="text" name="total" placeholder="Total">
            </div>
    
            <button type="submit" class="boton-enviar">FINALIZAR COMPRA</button>
        </form>
        <!-- PRODUCTOS -->

        <section class="section-productos">
            <div class="producto">
                <img src="/images/colchonetas.webp" alt="colchoneta">
                <div class="textos">
                    <div class="contenedor-icono-eliminar">
                        <div class="icono-eliminar">
                            <i class="fa-solid fa-trash-can"></i>
                        </div>
                    </div>
                    <h2 class="titulo">
                        Colchoneta
                    </h2>
    
                    <p class="cantidad">
                        1 unidad
                    </p>
                    <p class="precio">
                        $1000
                    </p>
                </div>
            </div>
    
            <div class="producto">
                <img src="/images/cuerdas.webp" alt="cuerda">
                <div class="textos">
                    <div class="contenedor-icono-eliminar">
                        <div class="icono-eliminar">
                            <i class="fa-solid fa-trash-can"></i>
                        </div>
                    </div>
                    <h2 class="titulo">
                        Cuerda
                    </h2>
    
                    <p class="cantidad">
                        1 unidad
                    </p>
                    <p class="precio">
                        $1000
                    </p>
                </div>
            </div>
    
            <div class="producto">
                <img src="/images/pesas(1).webp" alt="pesas">
                <div class="textos">
                    <div class="contenedor-icono-eliminar">
                        <div class="icono-eliminar">
                            <i class="fa-solid fa-trash-can"></i>
                        </div>
                    </div>
                    <h2 class="titulo">
                        Pesas
                    </h2>
    
                    <p class="cantidad">
                        1 unidad
                    </p>
                    <p class="precio">
                        $1000
                    </p>
                </div>
            </div>
            </div>
        </section>

    </main>
    <!-- FOOTER -->
    <%- include('./partials/footer') %>
</body>

</html>